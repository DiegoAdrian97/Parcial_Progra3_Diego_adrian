<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Detalle de Venta</title>
    <style>
      body {
        font-family: Arial;
        padding: 20px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
      }
      th,
      td {
        border: 1px solid #ccc;
        padding: 8px;
      }
      img {
        width: 60px;
      }
      a.btn {
        padding: 6px 12px;
        background: #333;
        color: white;
        text-decoration: none;
        border-radius: 5px;
      }
    </style>
  </head>
  <body>

    <h1>Venta #<%= venta.id %></h1>
    <p><strong>Fecha:</strong> <%= venta.fecha %></p>
    <p><strong>Total:</strong> $<%= venta.total %></p>

    <a class="btn" href="/admin/ventas">Volver</a>

    <h2>Productos vendidos</h2>

    <table>
      <thead>
        <tr>
          <th>Imagen</th>
          <th>Producto</th>
          <th>Cantidad</th>
          <th>Precio Unitario</th>
        </tr>
      </thead>
      <tbody>
        <% productos.forEach(p => { %>
        <tr>
          <td><img src="<%= p.img %>" alt="" /></td>
          <td><%= p.nombre %></td>
          <td><%= p.cantidad %></td>
          <td>$<%= p.precio_unitario %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
